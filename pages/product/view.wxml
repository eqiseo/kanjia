<!--pages/index/detail.wxml-->

<!--内容开始-->
<view class="cont">
  <!--<image class="tp_image" src="{{itemData.photo_d}}"></image>-->
  <swiper style="height:375px" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{bannerItem}}" wx:key="key">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view class="title">【{{itemData.brand}}】{{itemData.name}}</view>
  <view class="gmxx">
    <view>
      <!-- <span wx:if="{{!kjJdStatus}}" class="jiage">原价：¥{{itemData.price_yh}}</span> -->
      <!-- <span wx:if="{{kjJdStatus}}" class="jiage">砍价后：¥{{kjPrice}}</span> -->
      <span class="font_12">当前库存：{{itemData.num}}<text class='f_cheng'>【库存为0时，所有砍价停止】</text></span>
    </view>
    <!-- <view class="font_14 c6">品牌：{{itemData.brand}}</view>
    <view class="font_14 c6">支付：微信支付</view> -->
  </view>
  <view class="gmxx" wx:if="{{kjJdStatus}}">
    <view class="font_14 c6" style='line-height:37px;'>
      <image class="fl_l userinfo-avatar" src='{{userInfo.avatarUrl}}'></image>
      <text class="fl_l">砍价进度：原价为{{itemData.price}},已砍至{{itemData.cost}}</text>
    </view>
    <view class="bg">
        <view class="per" style="width:{{kjPer}};"></view>
    </view>
    <view>
      <view class='fl_l'>￥{{itemData.kj_lowprice}}</view>
      <view class='fl_r'>￥{{itemData.price}}</view>
    </view>
  </view>
  <view class="gmxx" wx:if="{{kjJdStatus}}">
    <view class="font_14 c6">排行榜：
      <view class="kjUserList" bindtap="showKjUserList">
        <image class="userinfo-avatar fl_l" src="{{kjOne.picurl}}" background-size="cover"></image>{{kjOne.name}}
        <span class="fl_r">
          砍掉{{kjOne.price}}
          <icon class="iconfont icon-gengduo fl_r"></icon>
        </span>
        <view class="clear"></view>
      </view>
    </view>
  </view>
</view>


<!--购买弹窗-->
<view class="drawer_screen" bindtap="setModalStatus" data-status="0" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus}}">
  <view class="close_icon" bindtap="setModalStatus" data-status="0">×</view>
  <view class="drawer_attr_content">
    <view class="text_center">
      <image class="drawer_image" src="{{itemData.photo_x}}"></image>
      <view class="mingcheng">
        <view>{{itemData.name}}</view>
        <view style="font-size:29rpx;color:red">¥ {{itemData.cost}}</view>
        <view style="font-size:26rpx;color:#ccc">库存：{{itemData.num}}</view>
      </view>
    </view>

    <view style="width:100%;margin-bottom:160rpx;"></view>
    <view class="footc" bindtap="addShopCart" data-type="buynow" data-status="1">
      立即购买
    </view>
  </view>
</view>

<!--砍价排行榜弹窗-->
<view class="drawer_screen" bindtap="showKjUserList" data-status="0" wx:if="{{showKjModalStatus}}"></view>
<view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showKjModalStatus}}">
  <view class="close_icon" bindtap="showKjUserList" data-status="0">×</view>
  <view class="drawer_attr_content">
    <view class="user_list">
      <view class="kjUserList" wx:for="{{kjUser}}">
          <image class="userinfo-avatar fl_l" src="{{item.picurl}}" background-size="cover"></image>{{item.name}}
          <span class="fl_r">
            砍掉{{item.price}}
            <icon class="iconfont icon-gengduo fl_r"></icon>
          </span>
          <view class="clear"></view>
      </view>
    </view>
  </view>
</view>

<!--图文详情头部-->
<view>
  <view class="swiper-tab">
    <view class="bre swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">图文详情</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">产品参数</view>
  </view>
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">

    <!-- 图文详情 -->
    <swiper-item>
      <import src="../../wxParse/wxParse.wxml" />
      <view class="wxParse">
        <scroll-view style="height:2000rpx;" scroll-y='true'>
          <template is="wxParse" data="{{wxParseData:content.nodes}}" />
        </scroll-view>
      </view>
    </swiper-item>



    <!-- 产品参数 -->
    <swiper-item>
      <view class="p_all">
        <view class="canshu df">
          <view class="name">商品名称：</view>
          <view class="df_1 c3">{{itemData.name}}</view>
        </view>
        <view class="canshu df">
          <view class="name">商品编号：</view>
          <view class="df_1 c3">{{itemData.pro_number}}</view>
        </view>
        <view class="canshu df">
          <view class="name">分类：</view>
          <view class="df_1 c3">{{itemData.cat_name}}</view>
        </view>
        <view class="canshu df">
          <view class="name">售后：</view>
          <view class="df_1 c3">签收之日48小时无条件退货</view>
        </view>
      </view>
    </swiper-item>
  </swiper>
</view>
<!---底部开始-->
<view class="footfixed tc">
  <view class="fl_l w100">
    <view wx:if="{{!helpTaStatus}}" class="fl_l w50 h50 bg_green white" open-type="share">
      <button wx:if="{{!kjType}}" class="w100 fl_l bg_no white" open-type="share">喊人砍价</button>
    </view>
    <!-- <view wx:if="{{helpTaStatus}}" class="w33 fl_l h50 bg_green white" bindtap="helpTa" data-type="helpTa">帮Ta砍</view> -->
    <!-- <view class="w33 fl_l h50 bg_cheng white" bindtap="addShopCart" data-type="addcart">加入购物车</view> -->
    <view class="bg_red h50 white w50 fl_l" bindtap="setModalStatus" data-status="1">立刻购买</view>
  </view>
</view>